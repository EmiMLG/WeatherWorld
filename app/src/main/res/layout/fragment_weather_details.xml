<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.telefonica.talentum.weatherworld.fragments.WeatherDetailsFragment">

    <TextView
        android:id="@+id/fragment_weather_details_city_name"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        tools:text="Torremolinos" />

    <ImageView
        android:id="@+id/fragment_weather_details_icon"
        tools:src="@drawable/sun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/fragment_weather_details_temperature"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="100sp"
        tools:text="23ÂºC"
        android:gravity="bottom|right"
        android:textColor="#0000ff"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
